<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="4dp">
    <!-- CardView with Image and Text inside -->
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <!-- Image for the offer -->
            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/offer"
                android:scaleType="centerCrop"/>

            <!-- Title of the offer -->
            <TextView
                android:id="@+id/offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Offer Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Description of the offer -->
            <TextView
                android:id="@+id/offer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Description"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <!-- Discount information -->
            <TextView
                android:id="@+id/offer_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount Info"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"/>

            <!-- Shop Now Button -->
            <Button
                android:id="@+id/btn_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="Shop now"
                android:backgroundTint="@android:color/holo_orange_dark"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
